<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal"
    tools:context="com.ling_argume.omgshoppingapp.ProductsActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="25dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="3dp"
        android:background="#fff"
        android:padding="1dp"
        android:src="@drawable/ball"
        android:contentDescription="@string/product_image_sample_text">
    </ImageView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        tools:context="com.ling_argume.omgshoppingapp.ProductsActivity">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name_sample_text"
            android:textStyle="bold"
            android:textSize="23sp" >
        </TextView>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_sample_text"
            android:textSize="20sp" >
        </TextView>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"

            android:orientation="horizontal"
            tools:context="com.ling_argume.omgshoppingapp.ProductsActivity">

            <TextView
                android:id="@+id/price"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/price_sample_text"
                android:textColor="#E65100"
                android:textSize="27sp" >
            </TextView>

            <TextView
                android:id="@+id/product_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/available_sample_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        </LinearLayout>
    </LinearLayout>




</LinearLayout>
