<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:orientation="vertical"
    tools:context="com.centennialcollege.omgshoppingapp.SingleProductActivity">

    <TextView
        android:id="@+id/greeting"
        style="@style/Greeting"
        />

    <ImageView
        android:id="@+id/single_product_image"
        style="@style/singleProductImage">
    </ImageView>

        <TextView
            android:id="@+id/single_product_name"
            style="@style/singleProductName">
        </TextView>

    <TextView
        android:id="@+id/single_product_category"
        style="@style/singleProductCategory">
    </TextView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:orientation="horizontal"
        tools:context="com.centennialcollege.omgshoppingapp.ProductsActivity">

        <TextView
            android:id="@+id/single_product_price"
            style="@style/singleProductPrice">
        </TextView>


        <TextView
            android:id="@+id/product_availability_prefix"
            style="@style/singleProductAvailable"/>
        <TextView
            android:id="@+id/single_product_availability"
            style="@style/singleProductAvailableNumber"/>

    </LinearLayout>


        <TextView
            android:id="@+id/single_product_description"
            style="@style/singleProductDescription" >
        </TextView>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        tools:context="com.centennialcollege.omgshoppingapp.ProductsActivity">


            <TextView
                android:id="@+id/single_product_quantity"
                style="@style/singleProductQuantity">
            </TextView>

            <EditText
                android:id="@+id/qty"
                style="@style/singleProductQuantityNumber"/>


            <ImageButton
                android:id="@+id/btn_place_order"
                android:onClick="onButtonClick"
                style="@style/singleProductCart">

            </ImageButton>

    </LinearLayout>

</LinearLayout>
