<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.centennialcollege.omgshoppingapp.CategoriesActivity">

    <TextView
        android:id="@+id/greeting"
        style="@style/labelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/large_text_margin"
        android:layout_marginEnd="@dimen/large_text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:text="@string/hello_user_sample_text"
        android:textAlignment="viewEnd" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_categories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:padding="20dp"
        android:background="@color/cardview_light_background"
        android:scrollbars="vertical"
        />

</RelativeLayout>
