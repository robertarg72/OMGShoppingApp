<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.centennialcollege.omgshoppingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splashscreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ProductsActivity" />
        <activity android:name=".SingleProductActivity" />
        <activity android:name=".OrdersActivity" />
        <activity android:name=".SingleOrderActivity" />
        <activity android:name=".OrdersManagementActivity" />
        <activity android:name=".ShoppingCartActivity" />
        <activity android:name=".CategoriesActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".RegisterActivity"></activity>
    </application>

</manifest>